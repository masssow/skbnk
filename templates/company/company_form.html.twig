{% extends 'base.html.twig' %}

{% block title %}Ajouter entreprise{% endblock %}

{% block body %}
<h1 class=" text-center my-4">Ajouter mon entreprise</h1>

<a href="{{ path('app_company')}} " class="btn btn-outline-dark btn-sm  float-end my-2 me-5">Retour</a></br>


    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">{{ form_row(form.name)}}</div> 
        <div class="col-md-6">{{ form_row(form.siret)}}</div>
    
        <div class="col-md-6">{{ form_row(form.city)}}</div>
        <div class="col-md-6">{{ form_row(form.sizeOfCompany)}}</div>
         <div class="col-md-6">{{ form_row(form.Activity)}}</div>   
        <div class="col-md-6">{{ form_row(form.description)}}</div> 
        {# <div class="col-md-6">{{ form_row(form.phone)}}</div>    #} 
  </div>
    
<button class="btn btn-outline-success btn-sm d-grid gap-2 col-2 mx-auto my-3">{{button_label|default ('enregistrer')}}</button>
    {{ form_end(form) }}

 

  
  
{% endblock %}
