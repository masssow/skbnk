{% extends 'base-company.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <h1>Company index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Siret</th>
                <th>Taille</th>
                <th>Name</th>
                <th>Email</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>City</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.Siret }}</td>
                <td>{{ company.taille }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.email }}</td>
                <td>{{ company.adresse }}</td>
                <td>{{ company.telephone }}</td>
                <td>{{ company.city }}</td>
                <td>{{ company.description }}</td>
                <td>
                    <a href="{{ path('app_crud_company_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('app_crud_company_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_crud_company_new') }}">Create new</a>
{% endblock %}
